# top-most EditorConfig file
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 130
insert_final_newline = true
trim_trailing_whitespace = true

[*.fs]
# Fantomas properties https://fsprojects.github.io/fantomas/docs/end-users/Configuration.html
fsharp_keep_max_number_of_blank_lines = 1
fsharp_max_dot_get_expression_width = 70 # Default = 80
fsharp_max_function_binding_width = 60 # Default = 40
fsharp_max_infix_operator_expression = 100 # Default = 80
fsharp_max_value_binding_width = 100 # Default = 80
fsharp_multiline_bracket_style = stroustrup
fsharp_newline_before_multiline_computation_expression = false

[*Handlers.fs]
max_line_length = 140

[src/GymDiary.Api/Router.fs]
max_line_length = 180
fsharp_max_infix_operator_expression = 180 # Default = 80

[*.json]
indent_size = 2

[*.{xml,csproj,fsproj,props,targets}]
indent_size = 2
ij_xml_space_inside_empty_tag = true

[*.{yml,yaml}]
indent_size = 2

[*.{http,rest}]
indent_size = 0
